<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>300 Tarefas</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <style>
        .back {
            background-image: url('../../Imagens/fundo_web.png');
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .cabecalhoTable {
            color: #fff;
        }

        .body-content {
            border-radius: 25px;
            background-color: rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <div class="back">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <!--Nome do link, action,controller, html-->
                        <li>@Html.ActionLink("Minhas tarefas", "Index", "Tarefas", new { id = 0 }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Alterar meu cadastro", "Edit", "Usuarios", null, new { @class = "navbar-brand" })</li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li>Bem vindo, <br />@User.Identity.Name</li>
                        <li> </li>
                        <li>@Html.ActionLink("Sair", "Logout", "Usuarios", null, new { @class = "navbar-brand" })</li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container body-content">
            @RenderBody()

            <footer style="text-align:center;margin-top:400px;color:#fff">
                <hr />
                <p>&copy; @DateTime.Now.Year - 300 Tarefas</p>
            </footer>
        </div>
    </div>
</body>
</html>

